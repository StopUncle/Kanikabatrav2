# Production Environment Variables
# Copy this file to .env.production and fill in your production values

# Database (PostgreSQL for production)
DATABASE_URL="postgresql://user:password@your-production-db:5432/kanikabatra?schema=public&sslmode=require"

# JWT Secrets (Generate new secure keys for production!)
# Generate with: openssl rand -base64 64
JWT_SECRET=your-production-jwt-secret-min-64-chars
JWT_REFRESH_SECRET=your-production-refresh-secret-min-64-chars

# PayPal Live Configuration
NEXT_PUBLIC_PAYPAL_CLIENT_ID="your-live-paypal-client-id"
PAYPAL_CLIENT_ID="your-live-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-live-paypal-client-secret"
PAYPAL_WEBHOOK_ID="your-live-paypal-webhook-id"

# Email Configuration (Production SMTP)
EMAIL_HOST="smtp.sendgrid.net"
EMAIL_PORT="587"
EMAIL_SECURE="false"
EMAIL_USER="apikey"
EMAIL_PASSWORD="your-sendgrid-api-key"
EMAIL_FROM="\"Kanika Batra\" <hello@kanikabatra.com>"
ADMIN_EMAIL="kanika@kanikabatra.com"

# Application URLs
NEXT_PUBLIC_BASE_URL="https://kanikabatra.com"

# Environment
NODE_ENV=production

# Security Headers
NEXT_PUBLIC_CSP_HEADER="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.paypal.com https://www.sandbox.paypal.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://api.paypal.com https://api.sandbox.paypal.com; frame-src https://www.paypal.com https://www.sandbox.paypal.com;"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# Session Configuration
SESSION_COOKIE_MAX_AGE="604800"
SESSION_COOKIE_SECURE="true"
SESSION_COOKIE_HTTPONLY="true"
SESSION_COOKIE_SAMESITE="strict"

# Logging
LOG_LEVEL="info"
LOG_FORMAT="json"

# Analytics (Optional)
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_HOTJAR_ID="XXXXXXX"

# Monitoring (Optional)
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_ENVIRONMENT="production"

# CDN Configuration (Optional)
NEXT_PUBLIC_CDN_URL="https://cdn.kanikabatra.com"

# Feature Flags
ENABLE_NEWSLETTER="true"
ENABLE_COACHING_BOOKING="true"
ENABLE_PAYMENT_PROCESSING="true"
ENABLE_EMAIL_NOTIFICATIONS="true"

# API Rate Limits
API_RATE_LIMIT_PER_MINUTE="60"
API_RATE_LIMIT_PER_HOUR="1000"

# Backup Configuration
BACKUP_ENABLED="true"
BACKUP_INTERVAL_HOURS="24"

# Redis Configuration (Optional - for sessions/caching)
REDIS_URL="redis://your-redis-instance:6379"
REDIS_PASSWORD="your-redis-password"

# Book Download Settings
BOOK_DOWNLOAD_EXPIRY_HOURS="24"
MAX_DOWNLOAD_ATTEMPTS="5"