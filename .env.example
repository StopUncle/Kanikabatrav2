# Database
DATABASE_URL="postgresql://user:password@localhost:5432/kanikabatra?schema=public"

# JWT Secrets
# Generate secure random strings for production
# You can use: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production

# PayPal Configuration
# Get these from https://developer.paypal.com/dashboard/
# For sandbox testing, use sandbox credentials
# For production, use live credentials
NEXT_PUBLIC_PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
PAYPAL_WEBHOOK_ID="your-paypal-webhook-id"

# Email Configuration (SendGrid)
# Get your API key from https://app.sendgrid.com/settings/api_keys
# Create a new API key with "Mail Send" permissions (Full Access)
# IMPORTANT: You must verify your sender email in SendGrid first!
# Go to: https://app.sendgrid.com/settings/sender_auth/senders
SENDGRID_API_KEY="SG.your-sendgrid-api-key-here"
FROM_EMAIL="noreply@kanikarose.com"
ADMIN_EMAIL="Kanika@kanikarose.com"

# Application URLs
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Environment
NODE_ENV=development